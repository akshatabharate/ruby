<!DOCTYPE html>
<html>
  <head>
    <title>Simpleblog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag%>
    <%= stylesheet_link_tag  'https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>  
     
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

      

  </head>

  <body data-spy="scroll" data-target=".navbar" data-offset="50">
 
  <div
  class="bg-image"
  style="
  
    background-image: url('https://images.pexels.com/photos/552791/pexels-photo-552791.jpeg?cs=srgb&dl=pexels-krivec-ales-552791.jpg&fm=jpg');
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    background-attachment: fixed;
   "
  >
  

   <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
       
<header class="container">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
 
  <div class="container-fluid">
  <div class="navbar-header">
 <a  href="#" class="navbar-brand" href="#">SIMPLE BLOG</a>
  </div>
    <%#  %>
    
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
               <div class="container-fluid">
            <button
                  class="navbar-toggler"
                  type="button"
                  data-mdb-toggle="collapse"
      
                     aria-controls="navbarRigtAlignExample"  
                      aria-expanded="false" 
                        aria-label="Toggle navigation"> 
                        <i class="fas fa-bars"></i>
              </button>
      
         <div class="collapse navbar-collapse" id="navbarText">
           
         <ul class="nav navbar-nav">
        <ul class="btn btn-space" type="button" >
        <li>
        <%= link_to "Home ", home_path ,  :class => 'btn btn-info'%>  
        </ul>
        </li>
         </ul>  
         
         
         <ul class="nav navbar-nav">
         <ul class="btn btn-space" type="button" >
        <li><%= link_to "Create Category", new_category_path,  :class => 'btn btn-info'%> </li>
      </ul>
      </ul>
        <ul class="nav navbar-nav navbar-right">
        <ul class="btn btn-space" type="button" >
        <li><%= link_to "Create Post", new_post_path,  :class => 'btn btn-info'%></li>
      </ul>
      </ul>
      <%if current_user%>
      <ul class="nav navbar-nav">
      <ul class="btn btn-space" type="button" >
    <li> <%= link_to 'sign out', destroy_user_session_path, method: :delete, :class => 'btn btn-danger' %></li>
      </ul>
      </ul>
      <% else %>
         <ul class="nav navbar-nav">
         <ul class="btn btn-space" type="button" >
        <li><%= link_to "Sign in ", new_user_session_path,  :class => 'btn btn-info'%></li>
         </ul>
         </ul>
         <% end %>
      </div>
    </div>
  </nav>
</nav>

<div class="container">

    <%= yield %>
</div>
</div>
</header>
  </body>
</html>

<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th><h2>Category</h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><h3><%= category.category %></h3></td>
        <td><%= link_to 'Show', category , :class => 'btn btn-success'%>|</td>
        <td><%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-success' %>|</td>
        <td><%= link_to 'Destroy', category, method: :delete,  :class => 'btn btn-danger',data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, :class => 'btn btn-primary' %>

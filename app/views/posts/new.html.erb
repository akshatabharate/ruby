<h1>Add Post</h1>
  
<%= form_for :post, url: posts_path do |f| %>
     <% if @post.errors.any?%>

        <% @post.errors.full_messages.each do |msg|%>
            <div class="alert" alert-danger>
              <%= msg %>
            </div>
        <%end%>
     <%end%>
    <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title, {:class => 'form_control'} %>
    </p>
     <p>
    <%= f.label :body %> <br>
    <%= f.text_field :body, {:class => 'form_control'} %>

    <select name="title">
  <option value="BE">new</option>
  <option value="CHI">weather</option>
  <option value="MD" selected="selected">Sports</option>
</select>

    </p>
     <p>
    <%= f.submit({:class => 'btn btn-primary'}) %> 
    </p>
<% end %>





<h3>Comments</h3>
<% @post.comments.each do |comment| %>
    <div class:"well">
        <p><strong>
        <%= comment.username%>
        <%= comment.body%>
        
        
        <%= link_to 'Delete comment', [comment.post, comment],  method: :delete, data: {confirm: "Are you sure?"}, :class => 'btn btn-danger' %>
        
        </strong>
         </p>
    </div>

<%end%>
